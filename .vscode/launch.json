{
    "configurations": [

        {
            "name": "Docker: Python - General",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "general"
            },
        },
        {
            "name": "Python: Render Screen",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/render-screen.py",
            "console": "integratedTerminal"
        }
    ]
}